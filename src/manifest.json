{
  "manifest_version": 2,
  "name": "Firefox Notes",
  "description": "Displays a sidebar that lets you take notes on web pages.",
  "version": "1.3",
  "applications": {
    "gecko": {
      "id": "notes@mozilla.com",
      "strict_min_version": "54.0a1"
    }
  },
  "icons": {
    "48": "icons/notes-48.png",
    "96": "icons/notes-96.png"
  },
  "sidebar_action": {
    "default_icon": "icons/notes-48.png",
    "default_title" : "Notes",
    "default_panel": "sidebar/panel.html"
  },

  "permissions": [
    "identity",
    "storage",
    "https://ssl.google-analytics.com/collect"
  ],

  "background": {
    "scripts": [
      "vendor/testpilot-metrics.js",
      "vendor/dist/fxa-crypto-relier.js",
      "fxa-keys.js",
      "background.js"
    ]
  },

  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+H"
      }
    }
  }
}
